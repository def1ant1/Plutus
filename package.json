{
  "name": "plutus",
  "version": "0.1.0",
  "private": true,
  "description": "Plutus platform monorepo",
  "scripts": {
    "build": "pnpm -r --filter ./services/... run build && pnpm -r --filter ./libs/... run build",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "format": "pnpm -r run format",
    "contracts:validate": "pnpm nx run contracts:validate",
    "contracts:docs": "pnpm nx run contracts:docs",
    "security:audit": "pnpm audit || true",
    "security:trivy": "trivy fs --scanners vuln,secret --severity HIGH,CRITICAL --exit-code 1 --ignore-unfixed .",
    "ci": "pnpm lint && pnpm test && pnpm contracts:validate && pnpm security:audit && pnpm security:trivy"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^18.19.21",
    "@asyncapi/cli": "^2.7.0",
    "@asyncapi/generator": "^1.17.25",
    "@asyncapi/html-template": "^0.28.2",
    "@asyncapi/react-component": "^2.6.4",
    "@redocly/cli": "^1.21.0",
    "@stoplight/spectral-cli": "^6.11.0",
    "avsc": "^5.7.6",
    "nx": "^18.0.0",
    "pdfkit": "^0.13.0",
    "puppeteer": "^21.11.0",
    "lodash.sortby": "^4.7.0",
    "yaml": "^2.4.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.4.2"
  },
  "pnpm": {
    "packageManager": "pnpm@8.15.4"
  }
}
