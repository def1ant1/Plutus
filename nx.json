{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "plutus",
  "affected": {
    "defaultBase": "main"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["validate", "docs"]
      }
    }
  },
  "projects": {
    "contracts": {
      "root": "contracts",
      "tags": ["type:spec"],
      "implicitDependencies": []
    },
    "synthetics": {
      "root": "tools/synthetics",
      "tags": ["type:tooling"],
      "implicitDependencies": []
    },
    "chaos": {
      "root": "tools/chaos",
      "tags": ["type:tooling"],
      "implicitDependencies": []
    },
    "observability": {
      "root": "libs/observability",
      "tags": ["type:lib", "scope:platform"],
      "implicitDependencies": []
    },
    "core-domain": {
      "root": "libs/core-domain",
      "tags": ["type:lib", "scope:domain"],
      "implicitDependencies": []
    },
    "portal-web": {
      "root": "apps/portal-web",
      "tags": ["type:web", "scope:portal"],
      "implicitDependencies": ["observability", "orchestrator-svc"]
    },
    "orchestrator-svc": {
      "root": "services/orchestrator-svc",
      "tags": ["type:service", "scope:orchestrator"],
      "implicitDependencies": ["observability"]
    }
  },
  "plugins": [
    {
      "plugin": "@nx/next/plugin",
      "options": {
        "startTargetName": "start",
        "buildTargetName": "build",
        "devTargetName": "dev",
        "serveStaticTargetName": "serve-static",
        "buildDepsTargetName": "build-deps",
        "watchDepsTargetName": "watch-deps"
      }
    },
    {
      "plugin": "@nx/playwright/plugin",
      "options": {
        "targetName": "e2e"
      }
    }
  ],
  "generators": {
    "@nx/next": {
      "application": {
        "style": "css",
        "linter": "none"
      }
    }
  }
}
